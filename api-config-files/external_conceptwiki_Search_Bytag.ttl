@base <http://www.openphacts.org/api> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix api: <http://purl.org/linked-data/api/vocab#> .
@prefix ops: <http://www.openphacts.org/api#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

<#conceptWiki> a api:API ;
	rdfs:label "Concept Wiki services"@en;
	api:sparqlEndpoint <http://localhost:8890/sparql/> ;
	api:contentNegotiation api:parameterBased ;
	api:variable <#q> ;
	api:variable <#limit> ;
	api:variable <#uuid> ;
	api:variable <#branch> ;
	api:description "An API configuration to map free text to a concept URL." ;
	api:endpoint [
		a api:ExternalHTTPService ;
		api:name "Map free text to a concept URL based on semantic tag" ;
		api:enableCache false ;
		api:description "Search for a set of concept URLs based on free text and an input tag, which specifies the semantic type. Driven by ConceptWiki." ;
		api:resultsDescription "?primaryTopic <span style=\"BACKGROUND-COLOR: #66FFCC\"> rdf:type ?searchType ;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> ops_api:searchTerm ?searchTerm ;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> ops_api:tagUUID ?inputTagUUID ;
	<span style=\"BACKGROUND-COLOR: #33CC99\"> ops_api:result ?uuidURL ;
	<span style=\"BACKGROUND-COLOR: #FFFFCC\"> ops_api:limit ?resultsLimit .
?uuidURL <span style=\"BACKGROUND-COLOR: #66FFCC\"> skos:prefLabel ?conceptPrefLabel ;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> ops_api:match ?match ;
	<span style=\"BACKGROUND-COLOR: #33CC99\"> ops_api:semanticTag ?tagBNode ;			
	<span style=\"BACKGROUND-COLOR: #FFCC99\"> skos:altLabel ?conceptAltLabel ;			
	<span style=\"BACKGROUND-COLOR: #FFCC99\"> skos:exactMatch ?urlBNode .
?tagBNode <span style=\"BACKGROUND-COLOR: #66FFCC\"> cw:uuid tagUUID ;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> skos:prefLabel ?tagPrefLabel ;
	<span style=\"BACKGROUND-COLOR: #FFFFCC\"> cw:deleted ?deletedFromWikiMarker ;
	<span style=\"BACKGROUND-COLOR: #FFCC99\"> skos:altLabel ?tagAltLabel .
?urlBNode <span style=\"BACKGROUND-COLOR: #66FFCC\"> cw:url ?url ;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> cw:matchType ?matchType ." ;

		
		api:uriTemplate "/search/byTag?q={q}&uuid={uuid}" ;
		api:externalRequestTemplate "http://ops.conceptwiki.org/web-ws/concept/search/byTag?q={q}&uuid={uuid}" ;
		api:externalResponseHandler "converters/conceptwiki_freetextsearch_json_to_rdf.php" ;
		api:exampleRequestPath "/search/byTag?q=water&uuid=07a84994-e464-4bbf-812a-a4b96fa3d197" ;
		api:viewer <#externalResponseViewer> ;
		api:defaultViewer <#externalResponseViewer> . ] .

<#q> api:name "q" ;
	api:label "q";
	api:value "Query; required. Minimum length is 3 characters. E.g. water" .

<#uuid> api:name "uuid" ;
	api:label "uuid";
	api:value "UUID of the tag concept; required. Specifies the 'semantic type' required for the search results. E.g. 07a84994-e464-4bbf-812a-a4b96fa3d197" .

<#limit> api:name "limit" ;
	api:label "limit";
	api:value "Limits the number of results; optional. Minimum value is 1, maximum value is common sense. Default value is 10." .
	
<#branch> api:name "branch" ;
	api:label "branch" ;
	api:value "The search results will be filtered by this source authority; optional. Possible values: 1 = Community, 2 = UMLS, 3 = SwissProt, 4 = ChemSpider, 5 = ConceptWiki" .

<#externalResponseViewer> a api:Viewer ;
	api:name "externalResponseViewer" .
