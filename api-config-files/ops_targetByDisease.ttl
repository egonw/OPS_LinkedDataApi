@base <http://www.openphacts.org/api> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/>.
@prefix api: <http://purl.org/linked-data/api/vocab#> .
@prefix rel: <http://vocab.org/relationship/> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix sio: <http://semanticscience.org/resource/>
@prefix ops: <http://www.openphacts.org/api#> .
@prefix cito: <http://purl.org/spar/cito/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ncit: <http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#> .


<#targetsByDisease> a api:API ;
        rdfs:label "Disease"@en ;
        api:sparqlEndpoint <http://ops2.few.vu.nl:8890/sparql/> ;
        api:contentNegotiation api:parameterBased ;
        api:variable <#input> ; 
	api:dataset <http://rdf.imim.es> ;
	api:vocabulary <http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#> ;
	api:vocabulary <http://semanticscience.org/resource/> ;
	api:description "An API configuration to return information about diseases" ;
	api:endpoint [ 
		a api:ListEndpoint ;
		api:name "Target by Disease" ;
		api:description "Returns a list of targets which correspond to the disease {uri}.";
		api:uriTemplate "/target/byDisease?uri={uri}" ;
	        api:itemTemplate "{uri}" ;
		api:exampleRequestPath "/target/byDisease?uri=http%3A%2F%2Flinkedlifedata.com%2Fresource%2Fumls%2Fid%2FC0004238" ;
	        api:selector [
        	api:where
"GRAPH <http://rdf.imim.es> {
	?gene_disease_assoc sio:SIO_000628 ?item .
	?item a ncit:C16612 .
	?item rdfs:label ?geneLabel .

 	?gene_disease_assoc sio:SIO_000628 ?ops_item .
}" ;
	        ] ;
		api:viewer <#diseaseByTargetViewer> ;
		api:defaultViewer <#diseaseByTargetViewer> . ] .

<http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#> api:label "ncit" .
<http://semanticscience.org/resource/> api:label "sio" .

<#input> api:name "uri" ;
        api:label "uri";
        api:value "A target URI. e.g.: http://purl.uniprot.org/uniprot/Q9Y5Y9" ;
        rdfs:range rdfs:Resource .

<#diseaseByTargetViewer> a api:Viewer ;
	api:name "diseaseByTargetViewer" ;
	api:template 
"?item foaf:name ?diseaseName ;
	ops:diseaseClass ?diseaseClass ;
	ops:forGene ?dg_gene_uri ;
	rdfs:seeAlso ?bio2rd_uri ;	
	void:inDataset <http://rdf.imim.es> .
?diseaseClass foaf:name ?diseaseClassName .
?dg_gene_uri ops:encodes ?cw_target_uri .
?cw_target_uri skos:prefLabel ?prefLabel ;
	void:inDataset <http://www.conceptwiki.org> .
";
	api:where
"GRAPH <http://www.conceptwiki.org> {
	?cw_target_uri skos:prefLabel ?prefLabel .
}
GRAPH <http://rdf.imim.es> {
	?gene_disease_assoc sio:SIO_000628 ?item .
	?item a ncit:C16612 .
	?item rdfs:label ?geneLabel .

 	?gene_disease_assoc sio:SIO_000628 ?ops_item .
}" .
