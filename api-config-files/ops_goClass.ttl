@base <http://www.openphacts.org/api> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/>.
@prefix api: <http://purl.org/linked-data/api/vocab#> .
@prefix rel: <http://vocab.org/relationship/> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix drugbank: <http://www4.wiwiss.fu-berlin.de/drugbank/resource/drugbank/> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix obo: <http://purl.obolibrary.org/obo/> .
@prefix cheminf: <http://semanticscience.org/resource/> .
@prefix qudt: <http://qudt.org/1.1/schema/qudt#> .
@prefix ops: <http://www.openphacts.org/api#> .
@prefix cito: <http://purl.org/spar/cito/> .
@prefix ssb: <http://www.semantic-systems-biology.org/ontology/rdf/OBO#> .
@prefix aers: <http://aers.data2semantics.org/vocab/> .
@prefix ops: <http://www.openphacts.org/api#> .
@prefix obo-go: <http://purl.org/obo/owl/GO#> .

<#go> a api:API ;
        rdfs:label "Gene Ontology"@en ;
        api:sparqlEndpoint <http://localhost:8890/sparql/> ;
        api:contentNegotiation api:parameterBased ;
        api:variable <#input> ; 
	api:dataset <http://www.geneontology.org> ;
	api:vocabulary <http://semanticscience.org/resource/> ;
	api:vocabulary <http://www.semantic-systems-biology.org/ontology/rdf/OBO#> ;
	api:description "An API configuration to return information about genes and targets" ;
	api:endpoint [ 
		a api:ItemEndpoint ;
		api:name "Get Gene Ontology Class" ;
		api:description "A representation of a given Gene Ontology class, its parent and siblings." ;
		api:resultsDescription "?ops_item <span style=\"BACKGROUND-COLOR: #66FFCC\"> rdfs:subClassOf ?parent </span>;
	<span style=\"BACKGROUND-COLOR: #66FFCC\"> rdfs:label ?item_name </span>;
	<span style=\"BACKGROUND-COLOR: #33CC99\"> ops:sibling ?sibling </span>.
?sibling <span style=\"BACKGROUND-COLOR: #66FFCC\"> rdfs:label ?sibling_name </span>.
?parent <span style=\"BACKGROUND-COLOR: #66FFCC\"> rdfs:label ?parent_name</span>." ;		
		api:uriTemplate "/go/node?uri={uri}" ;
		api:itemTemplate "{uri}" ;
		api:exampleRequestPath "/go/node?uri=http%3A%2F%2Fpurl.org%2Fobo%2Fowl%2FGO%23GO_0065009" ;
		api:viewer <#goClassViewer> ;
		api:defaultViewer <#goClassViewer> ] .

<http://www.geneontology.org> api:label "Gene Ontology" .

<http://www.semantic-systems-biology.org/ontology/rdf/OBO#> api:label "ssb" .
<http://semanticscience.org/resource/> api:label "sio" .

<#input> api:name "uri" ;
	api:label "uri";
	api:value "An Gene Onyology Class URI. e.g.: http://purl.org/obo/owl/GO#GO_0065009" ;
	rdfs:range rdfs:Resource .

<#goClassViewer> a api:Viewer ;
	api:name "goClassViewer" ;
	api:template 
"?ops_item rdfs:subClassOf ?parent ;
	rdfs:label ?item_name ;
	ops:sibling ?sibling .
?sibling rdfs:label ?sibling_name .
?parent rdfs:label ?parent_name" ;
	api:where 
"GRAPH <http://www.geneontology.org> {
	?ops_item rdfs:subClassOf ?parent .
	?sibling rdfs:subClassOf ?parent .
	?ops_item rdfs:label ?item_name .
	?parent rdfs:label ?parent_name .
	?sibling rdfs:label ?sibling_name .
	FILTER (?ops_item!=?sibling)
}
" .

